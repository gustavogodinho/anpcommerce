@page
@model ANPCommerce.Web.Pages.ContactModel
@{
    ViewData["Title"] = "Contato";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!--================Contact Area =================-->
<section class="contact_area section_gap_bottom">
    <div class="container">
        <div id="mapBox" class="mapBox" data-lat="40.701083" data-lon="-74.1522848" data-zoom="13" data-info="PO Box CT16122 Collins Street West, Victoria 8007, Australia."
             data-mlat="40.701083" data-mlon="-74.1522848">
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="contact_info">
                    <div class="info_item">
                        <i class="lnr lnr-home"></i>
                        <h6>São Paulo, Brasil</h6>
                        <p>Espaço Maestro</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-phone-handset"></i>
                        <h6><a href="#">55 (11) 98984-7809</a></h6>
                        <p>Mon to Fri 9am to 6 pm</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-envelope"></i>
                        <h6><a href="#">contato@azurenapratica.com</a></h6>
                        <p>Matricule-se na próxima turma!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                @if (ViewData["IsContactSuccess"] != null && ViewData["IsContactSuccess"].ToString() == "true")
                {
                    <div class="alert alert-success">
                        Mensagem Enviada com sucesso
                    </div>
                }

                @if (ViewData["IsContactError"] != null && ViewData["IsContactError"].ToString() == "true")
                {
                    <div class="alert alert-danger">
                        Erro ao enviar mensagem, verifique as configurações do servidor.
                    </div>
                }
                <form class="row contact_form" method="post" id="contactForm" novalidate="novalidate">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nome Completo'">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'E-mail'">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter Subject" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Assunto'">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea class="form-control" name="message" id="message" rows="1" placeholder="Enter Message" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Digite sua mensagem'"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <button type="submit" value="submit" class="primary-btn">Enviar Mensagem</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!--================Contact Area =================-->
